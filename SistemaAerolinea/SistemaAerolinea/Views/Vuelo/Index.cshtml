@model IEnumerable<SistemaAerolinea.Models.Vuelo>

@{
    ViewData["Title"] = "Vuelos";
}
@section css {
    <link rel="stylesheet" href="~/css/vuelos.css" />
}

<h1 class="titulo">Vuelos de @Model.ToList().First().Origen a @Model.ToList().First().Destino</h1>

<div class="step-progress">
    <i class="fa fa-dot-circle-o actual" aria-hidden="true"></i>
    <span></span>
    <i>2</i>
    <span></span>
    <i>3</i>
</div>

    <div class="vuelos row">

        @foreach (var item in Model)
        {

            <div class="col-12 col-sm-12 col-md-12 col-lg-11 col-xl-10 d-flex row">
                <div class="d-flex justify-content-around col-5 col-sm-5 col-md-4 col-lg-4 col-xl-4">
                    <div class="avion">
                        <i class="fa fa-plane"></i>
                    </div>
                    <div>
                        <div class="hora">@item.HoraFechaSalida.ToString("t")</div>
                        <div>@item.HoraFechaSalida.ToString("d")</div>
                        <div>@item.Origen</div>
                    </div>
                </div>
                <div class="flechas col-2 col-sm-2 col-md-1 col-lg-1 col-xl-1">
                    <i class="fa fa-arrow-right"></i><br /><i class="fa fa-arrow-left"></i>
                </div>
                <!--<div>@item.HoraFechaLlegada.ToString("t")<br /> @item.HoraFechaLlegada.ToString("d")<br />@item.Destino</div>-->
                <div class="d-flex justify-content-around col-5 col-sm-5 col-md-4 col-lg-4 col-xl-4">
                    <div class="avion">
                        <i class="fa fa-plane vuelta"></i>
                    </div>
                    <div>
                        <div class="hora">@item.HoraFechaLlegada.ToString("t")</div>
                        <div>@item.HoraFechaLlegada.ToString("d")</div>
                        <div>@item.Destino</div>
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3 row align-items-sm-end align-items-end">
                    <div class="costo col-6 col-sm-6 col-md-12 col-lg-12 col-xl-12"> $@item.CostoPasaje</div>
                    <form class="col-6 col-sm-6 col-md-12 col-lg-12 col-xl-12" asp-controller="Vuelo" asp-action="Comprar" method="GET">
                        <input type="hidden" value="@item.VueloId" name="idVuelo" />
                        <br />
                        <button type="submit" class="boton btn btn-success">Comprar</button>
                    </form>
                </div>
            </div>

        }

    </div>

