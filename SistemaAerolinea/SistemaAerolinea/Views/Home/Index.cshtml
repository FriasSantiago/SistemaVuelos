@{
    ViewData["Title"] = "VolAr";

    var src = Url.Content("~/img");
    var banner = src + "/banner.jpg";
    var logo = src + "/logo.png";

}

@section css {
    <link rel="stylesheet" href="~/css/index.css" />
}

<div class="banner overflow-hidden">

    <div class="row justify-content-center">
        <div class="col-0 col-sm-0 col-md-4 col-lg-5 col-xl-6"></div>
        <div class="col-10 col-sm-10 col-md-6 col-lg-5 col-xl-4 buscador">
            <form asp-action="Index" asp-controller="Vuelo">
                <div class="grupo form-group">
                    <i class="fa fa-home fa-2x icon"></i>
                    <div class="position-relative w-100">
                        <input class="form-control text-white pl-2" name="origen" required />
                        <label class="label-name">
                            <span class="content-name text-white ml-2">Origen</span>
                        </label>
                    </div>
                    <span class="text-danger mensaje-error"></span>
                </div>

                <div class="grupo form-group">
                    <i class="fa fa-map-marker fa-2x icon"></i>
                    <div class="position-relative w-100">
                        <input class="form-control text-white pl-2" name="destino" required />
                        <label class="label-name">
                            <span class="content-name text-white ml-2">Destino</span>
                        </label>
                    </div>
                    <span class="text-danger mensaje-error"></span>
                </div>
                <div class="form-group">
                    <i class="fa fa-calendar fa-2x icon"></i>
                    <input required type="date" class="form-control" name="fechaSalida" />
                </div>
                <div class="form-group justify-content-center mb-0">
                    <button type="submit" class="btn boton botonbuscar">Buscar vuelos<i class="fa fa-search ml-2"></i></button>
                </div>
            </form>
        </div>
    </div>

</div>


